<% include partials/header %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="firstName" placeholder="Firstname" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastName" placeholder="Surname" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="E-Mail" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="avatar" placeholder="Avatar image url" required>
            </div>
            <div class="form-group text-center">
                <div class="checkbox-group required">
                    <input type="checkbox" id="user" name="userType" value="user" checked>
                    <label for="user">User</label>
                    <input type="checkbox" id="support" name="userType" value="support">
                    <label for="support">Support</label>
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="adminCode" placeholder="Admin code" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/support">Go Back</a>
    </div>
</div>
<script>
$(document).ready(function () {
    $('.checkbox-group.required :checkbox:checked').click(() => {
        var checked = $("input[type=checkbox]:checked").length
    
        if(!checked) {
            alert("You must check at least one checkbox.")
            return false;
        }
    })
})
</script>
<% include partials/footer %>